{
    "name": "clean-infinite-ask",
    "displayName": "Clean Infinite Ask",
    "description": "Safe, clean, and free version of Infinite Ask for Windsurf/Cursor",
    "version": "1.0.0",
    "publisher": "local-dev",
    "engines": {
        "vscode": "^1.80.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "cleanInfiniteAsk.configure",
                "title": "Clean Infinite Ask: Configure Now"
            },
            {
                "command": "cleanInfiniteAsk.test",
                "title": "Clean Infinite Ask: Test Dialog"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "build:dev": "node scripts/build.js dev",
        "build:prod": "node scripts/build.js prod",
        "package:dev": "npm run build:dev && vsce package",
        "package:prod": "npm run build:prod && vsce package"
    },
    "devDependencies": {
        "@types/node": "^18.0.0",
        "@types/vscode": "^1.80.0",
        "typescript": "^5.0.0"
    }
}